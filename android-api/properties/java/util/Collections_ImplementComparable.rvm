package mop;

import java.util.*;
import java.lang.*;
import javamoprt.MOPLogging;
import javamoprt.MOPLogging.Level;
Collections_ImplementComparable() {

	private void validate(Object[] arr, String msg) {
		for (int i = 0; i < arr.length; ++i) {
			Object o1 = arr[i];
			if (!(o1 instanceof Comparable)) {
				MOPLogging.out.println(Level.CRITICAL, msg);
				MOPLogging.out.println(Level.CRITICAL, i + "-th element does not implement the Comparable interface.");
			}
			Comparable c1 = (Comparable) o1;
			for (int j = i + 1; j < arr.length; ++j) {
				try {
					Comparable c2 = (Comparable) arr[j];
					c1.compareTo(c2);
					c2.compareTo(c1);
				} catch (ClassCastException e) {
					MOPLogging.out.println(Level.CRITICAL, msg);
					MOPLogging.out.println(Level.CRITICAL, i + "-th element and " + j + "-th element are not comparable.");
				}
			}
		}
	}
	event invalid_sort(List list){
		this.validate(list.toArray(), __DEFAULT_MESSAGE);
	}
	event invalid_minmax(Collection col){
		this.validate(col.toArray(), __DEFAULT_MESSAGE);
	}
}
