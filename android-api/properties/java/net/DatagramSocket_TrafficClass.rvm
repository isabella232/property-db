package mop;

import java.net.*;
import javamoprt.MOPLogging;
import javamoprt.MOPLogging.Level;
DatagramSocket_TrafficClass() {
	event settc(DatagramSocket socket, int tc){
		boolean outofrange = !(0 <= tc && tc <= 255);
		boolean mbz = false;
		boolean precedence = false;
		InetAddress addr = socket.getLocalAddress();
		if (addr instanceof Inet4Address) {
			mbz = (tc & 1) != 0 ? true : false;
			precedence = (tc >> (4 + 1)) != 0;
		}
		if (outofrange || mbz || precedence) {
			MOPLogging.out.println(Level.CRITICAL, __DEFAULT_MESSAGE);
			if (outofrange) {
				MOPLogging.out.println(Level.CRITICAL, "The traffic class value " + tc + " is out of range; [0 ~ 255].");
			} else {
				if (mbz) {
					MOPLogging.out.println(Level.CRITICAL, "The traffic class value sets 1 to MBZ.");
				}
				if (precedence) {
					MOPLogging.out.println(Level.CRITICAL, "The traffic class value sets non-zero precedence.");
				}
			}
		}
	}
}
